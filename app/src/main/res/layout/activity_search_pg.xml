<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchPgActivity">

    <RelativeLayout
        android:id="@+id/relative_layout_search_pg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/royal_blue_medium"/>

    <include
        android:id="@+id/include_search_activity"
        layout="@layout/filter_search_layout"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/relative_layout_search_pg"
        android:layout_marginTop="-110dp"/>

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include_search_activity"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:text="next->" />

</RelativeLayout>