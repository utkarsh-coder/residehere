<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/reside_screen_look_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/royal_blue_medium">

            <TextView
                android:id="@+id/head_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:layout_centerInParent="true"
                android:text="WHAT YOU ARE LOOKING FOR ?"/>

        </RelativeLayout>

        <Button
            android:id="@+id/button_pg"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_below="@+id/reside_screen_look_view"
            android:layout_marginStart="20dp"
            android:layout_marginTop="-30dp"
            android:backgroundTint="@color/white"
            android:text="Searching for PG"
            android:textColor="@color/black"
            android:textFontWeight="1" />

        <Button
            android:id="@+id/button_rent"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/button_pg"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"
            android:text="Searching for Room at Rent"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/white"
            android:textFontWeight="1"
            android:layout_below="@+id/reside_screen_look_view"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_rent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/reside_front_image" />

    </RelativeLayout>
</ScrollView>